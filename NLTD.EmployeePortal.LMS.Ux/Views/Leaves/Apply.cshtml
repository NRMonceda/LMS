                    daysOfWeekDisabled: returnArray(),
                    disabledDates: returnHolidayArray()
                }
                )
    .on('dp.change', function (e) {
        CountLeaveDays();

    })
            $('.datepickerNoHolidays').datetimepicker(
               {
                   viewMode: "days",
                   minDate: minDate,
                   maxDate: maxDate,
                   format: "DD/MM/YYYY"
                   
               }
               )


        });
